@page
@model Student_Mgmt_ASP_Core.Pages.Students.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Student</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Student.student_Name" class="control-label">Student Name</label>
                <input asp-for="Student.student_Name" class="form-control" />
                <span asp-validation-for="Student.student_Name" class="text-danger"> </span>
            </div>
            <div class="form-group">
                <label asp-for="Student.student_Email" class="control-label"></label>
                <input asp-for="Student.student_Email" class="form-control" placeholder="Enter email"/>
                <span asp-validation-for="Student.student_Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.student_Mobile" class="control-label"></label>
                <input asp-for="Student.student_Mobile" class="form-control" />
                <span asp-validation-for="Student.student_Mobile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.student_Address" class="control-label"></label>
                <input asp-for="Student.student_Address" class="form-control" />
                <span asp-validation-for="Student.student_Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.course_ID" class="control-label"></label>
                <input asp-for="Student.course_ID" class="form-control" />
                <span asp-validation-for="Student.course_ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
